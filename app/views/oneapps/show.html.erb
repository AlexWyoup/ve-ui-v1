<%= render 'layouts/header' %>
<div class="container main-cover">
	<div class="row">
		<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 col-xl-3 c_bg_white cover">
			<div class="row">
				<div class="page-sidebar navbar-collapse collapse">

					<!-- BEGIN SIDEBAR MENU -->
					<ul class="page-sidebar-menu">

						<li></li>

                                                <li class="start" >
							<%= link_to main_dashboards_path do %>
							<i class="c_icon c_icon-dash pull-left"></i>
							<span class="title pull-left">Back to dash</span>
							<span class="selected hidden-xs"></span>
							<% end %>
						</li>
<% appkey = request.original_url.partition('=').last %>


						<li class= "start active">
							<%= link_to overview_path(:appkey => appkey), :target => "_self" do %>
							<i class="c_icon c_icon-browser pull-left"></i>
							<span class="title pull-left">Overview</span>
							<span class="hidden-xs <%= "selected" if current_page?(:controller => 'oneapps', :action => 'overview')%>"></span>
							<% end %>
						</li>

						<li class= "start active">
							<%= link_to runtime_path(:appkey => appkey), :target => "_self" do %>
							<i class="c_icon c_icon-layer pull-left"></i>
							<span class="title pull-left">Runtime</span>
							<span class="hidden-xs <%= "selected" if current_page?(:controller => 'oneapps', :action => 'runtime')%>"></span>
							<% end %>
						</li>

						<li class= "start active">
							<%= link_to metrics_path(:appkey => appkey), :target => "_self" do %>
							<i class="c_icon c_icon-stack pull-left"></i>
							<span class="title pull-left">Metrics</span>
							<span class="hidden-xs <%= "selected" if current_page?(:controller => 'oneapps', :action => 'metrics')%>"></span>
							<% end %>
						</li>

						<li class="start active">
							<%= link_to oneapp_services_path(:appkey => appkey), :target => "_self" do %>
							<i class="c_icon c_icon-settings pull-left"></i>
							<span class="title pull-left">Services</span>
							<span class="hidden-xs <%= "selected" if current_page?(:controller => 'oneapps', :action => 'services')%>"></span>
							<% end %>
						</li>



					</ul>
					<!-- END SIDEBAR MENU -->
				</div>
			</div>
		</div>

		<div id="content">
			<%= content_for?(:oneapp_contents) ? yield(:oneapp_contents) : yield %>

		</div>

	</div>

</div>
<%= render 'layouts/footer' %>
