<% provide(:title, "Sign in") %>

<%= render :partial => "customizations/flash_messages" %>
<div id="containerlogin">
	<div id="logo">
		<a href="http://www.gomegam.com" target="_blank"> <%= image_tag "scm-manager_logo.png", :alt => "Megam", :class => "megam_image" %> </a>
	</div>

	<div id="loginbox">
		<%= form_for(:scm_session, :url => scmmanager_auth_path, :html => {:id =>'password_validate', :novalidate => 'novalidate'}) do |f| %>
		<br/>
		<p>
			Enter username and password to authenticate with <a href="http://scm-manager.megam.co:8080/scmmanager" target="_blank">http://scm-manager.megam.co:8080/scmmanager</a>.
		</p>
		<div class="input-group">
			<span class="input-group-addon"><i class="fa fa-user"></i></span>
			<%= f.text_field :username, :class => 'form-control required',placeholder: "User Name" %>
		</div>
		<div class="input-group">
			<span class="input-group-addon"><i class="fa fa-lock"></i></span>
			<%= f.password_field :password, :id => 'password', :class => 'form-control required',placeholder: "Password" %>
		</div>
		<br/></br/>
		<div class="footer-login">
			<div class="form-actions clearfix">					
					<%= f.submit "Sign in", :class => "btn btn-default btn-block btn-success"  %>				
			</div>
		</div>

		<% end %>

	</div>

</div>
<script>
    $(document).ready(function() {
        $("body").addClass("login");
    }); 
</script>