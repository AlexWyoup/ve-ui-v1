<% @products = Product.all %>
<div class="row-fluid">
	<div class="span12" id="folders">
		<p class="help-block">
			<span class="label label-info">select</span><strong> Select a cloud application</strong>
		</p>
		<div class="flexslider">
			<ul class="slides">
				<% @products.each do |product| %>
				<li>
					<%= link_to import_path(:api_name => product.name), :remote => true, :type => "submit", :method => "post", data: { spinlock: '#dec'}  do %>
					<i class="logoc_<%= product.image_url %>", id ="slider-image"></i>
					<% end %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
<%= form_tag "/deccanplato", :id => 'form_json', :remote => true do %>
<div class="row-fluid">
	<div class="widget-box">
		<div class="widget-title">
			<span class="icon"> <i class="icon-th-list"></i> </span>
			<h5>Live Cloud</h5>
		</div>
		<div class="widget-content">
			<strong><span class="label label-info">*selection</span> Select any one URL </strong>
			<table class="table table-striped table-bordered">
				<br/>
				<tbody>
					<tr>
						<td>
						<div style="height: 340px;  overflow-y: scroll;">
							<h4>Cloud Application URL's'</h4>
							<div  id="cloud_rest_api">
								<div class="alert alert-info">
									<h5>App not yet selected.</h5>
								</div>
							</div>
						</div></td>
						<td>
						<div  style="height: 340px;  overflow-y: scroll;">
							<h4>Data Explorer</h4>
							Connector Bed
							<br/>
							<%= text_field :path, :id => 'large_text', placeholder: "Path" %>

							<div class="control-group">
								<div class="controls">
									Cloud Application URL
									<br/>
									<%= text_field :path, :id => 'large_text', placeholder: "Path" %>
								</div>
							</div>
							<div class="control-group">
								<div class="controls">
									Query string
									<br/>
									<%= text_field :json_text, :id => 'json_text', placeholder: "json" %>
								</div>
								<div class="offset3">
									<%= submit_tag "Run Query", :class => "btn btn-primary" %>
								</div>
							</div>
						</div></td>
						<td>
						<div>
							<h4>JSON</h4>
							<%= text_area_tag "json", :id => 'json_input' %>
						</div></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

</div>
<% end %>
