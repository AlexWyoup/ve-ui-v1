<% @products = Product.all %>

<% @products.each do |product| %>

<% if api_name == product.name %>
	<% product.rest_api.split(',').map{ |s| s }.each do |restapi_url| %>
	<%= link_to resource_path(:api_name => restapi_url, :url => product.url, :app_url => product.deccanplato_url), :remote => true, :type => "submit", :class => 'btn btn-block', :method => "post", data: { spinlock: '#dec'}  do %>
	<%= restapi_url %>
	<% end %>
	<% end %>
<% end %>

<% end %> <!-- each product -->
<input type="hidden" name="url" id="turl" value="<%= @url.to_s %>">
<input type="hidden" name="deccanplato_url" value="<%= @app_url.to_s %>">
