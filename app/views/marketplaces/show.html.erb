<% content_for :content_settings do %>
<% provide(:title, 'Marketplace') %>

<%= render :partial => "users/header" , :locals => {:head => "Marketplace"}%>
<div id="breadcrumb">
	<%= breadcrumbs.render(:format => :inline,:separator => '') %>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-11">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<div class="row">
						<div class="col-md-2">
							<a href="#" > <%= image_tag @mkp.appdetails[:logo], :alt => @mkp.name, :class => "megam_image" %> </a>
							<br/>
						</div>
						<div class="col-md-3">
							<p>
								<strong><h3><%= @mkp.name %></h3></strong>
							</p>
							<p>
								<h5><%= @mkp.appdetails[:category].upcase %></h5>
							</p>
						</div>
						<div class="col-md-6"></div>
					</div>
				</div>

				<div class="panel-body">
					<div class="row">
						<div class="col-md-6">
							<ul class="list-group">
								<li class="list-group-item">
									<span class="pull-right"><h4><%= @mkp.plan[:plantype].capitalize %></h4></span>
									<h4><span class="label label-default">Plan Type</span></h4>
								</li>
								<li class="list-group-item">
									<span class="pull-right"><h4><%= @mkp.plan[:price]%></h4></span>
									<h4><span class="label label-default">Software Price</span></h4>
								</li>
								<li class="list-group-item">
									<div class="panel panel-primary">
										<!-- Default panel contents -->
										<div class="panel-body">
											<table>
												<tr>
													<td><b>Latest Version</b></td>
													<td><span class="label label-primary">&nbsp;<%= @mkp.appdetails[:version] %></span> on Ubuntu 13.04</td>
												</tr>
												<tr>
													<td><b>Operating System</b></td>
													<td>&nbsp;Linux/Unix, Ubuntu 13.04 +</td>
												</tr>
												<tr>
													<td><b>Delivery Method</b></td>
													<td>&nbsp;64-bit Image</td>
												</tr>
												<tr>
													<td><b>Support</b></td>
													<td>&nbsp;See Product description</td>
												</tr>
												<tr>
													<td><b>Services Required</b></td>
													<td>&nbsp;Compute cloud (<a href="http://gogrid.com/" target="_blank">GOGRID</a>,<a href="http://www.profitbricks.com" target="_blank">ProfitBricks</a>..)</td>
												</tr>

											</table>
										</div
									</div>
						</div>

						<% if @mkp.approved == "true" %>
						<%= render :partial => "marketplaces/add_button", :locals => {:name => @mkp.name, :category => @mkp.appdetails[:category], :predef_name => @predef_name, :deps_scm => @deps_scm} %>
						<br/>
						<% if @mkp.attach == "true" %>
						<br/>
						<div class="well well-lg">
							<div class="form-group">
								<div class="col-sm-8 col-md-8 col-lg-9">
									<b><%= select_tag 'App', options_for_select(@my_apps.insert(0, "Choose an App")), :id => "attach_app_select" %></b>
								</div>
							</div>
							<br/>
							<button class="btn btn-purple btn-block btn-lg">
								Attach
							</button>
						</div>
						<% else %>
						<% end %>
						<% else %>
						<div class="alert alert-danger alert-block">
							<a class="close" data-dismiss="alert" href="#">Ã—</a>
							<h4 class="alert-heading"><b>Announcing soon.</b></h4>
							We will support this market place addon shortly.
							<%= link_to "Configure", drbd_config_path, class: "btn btn-success btn-block btn-lg", :method => :post %>
						</div>
						<% end %>

					</div>
					<div class="col-md-6">
						<div class="panel panel-default nopadding">
							<!-- Default panel contents -->
							<div class="panel-heading">
								<h4>Product description</h4>
							</div>
							<div class="panel-body">
								<div class="article-post">
									<%= @mkp.appdetails[:description].html_safe %>
								</div>
								</br>
								<div class="comments">
									<span class="icon"><i class="fa fa-list-alt"></i>&nbsp; <b>Links</b></span>
									<p>
										<ul>
											<li>
												<a href="<%= @mkp.applinks[:home_link] %>" target="_blank"><%= @mkp.applinks[:home_link] %> <i class="fa fa-external-link"></i></a>
											</li>
											<li>
												<a href="<%= @mkp.applinks[:info_link] %>" target="_blank"><%= @mkp.applinks[:info_link] %> <i class="fa fa-external-link"></i></a>
											</li>
											<li>
												<a href="<%= @mkp.applinks[:wiki_link] %>" target="_blank"><%= @mkp.applinks[:wiki_link] %> <i class="fa fa-external-link"></i></a>
											</li>
											<li>
												<a href="<%= @mkp.applinks[:source_link] %>" target="_blank"><%= @mkp.applinks[:source_link] %> <i class="fa fa-external-link"></i></a>
											</li>
										</ul>
									</p>
								</div>
								</br>
								<span class="icon"><i class="fa fa-list-alt"></i>&nbsp; <b>Support</b></span>
								<p>
									<ul>
										<li>
											<a href="<%= @mkp.applinks[:free_support] %>" target="_blank"><b><%= @mkp.name %></b>&nbsp;<span class="label label-success">Free</span>&nbsp;<%= @mkp.applinks[:free_support]%>&nbsp;<i class="fa fa-external-link"></i></a>
										</li>
										<% if @mkp.applinks[:paid_support] != "#" %>
										<li>
											<a href="<%= @mkp.applinks[:paid_support] %>" target="_blank"><b><%= @mkp.name %></b>&nbsp;<span class="label label-danger">Paid</span>&nbsp;<%= @mkp.applinks[:paid_support] %>&nbsp;<i class="fa fa-external-link"></i></a>
										</li>
										<%end %>
										<li>
											<a href="http://support.megam.co" target="_blank"><b>Megam</b>&nbsp;<span class="label label-success">Free</span>&nbsp;http://support.megam.co&nbsp;<i class="fa fa-external-link"></i></a>
										</li>
										<li>
											<a href="http://www.gomegam.com/contact" target="_blank"><b>Megam</b>&nbsp;<span class="label label-danger">Paid</span>&nbsp;http://gomegam.com/contact/&nbsp;<i class="fa fa-external-link"></i></a>
										</li>
									</ul>
								</p>
								<div class="list-group">
									<a href="http://gomegam.com/partners"
									class="list-group-item list-group-item-warning" target="_blank">&nbsp;<b>Our Partners Cloud Pricing </b>http://gomegam.com/partners <i class="fa fa-external-link"></i></a>
								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-11">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="row">
					<div class="col-sm-7 col-md-7 col-lg-8">
						<span class="pull-left"><b>Features</b></span>
					</div>
				</div>
			</div>
			<table class="table table-hover" >
				<tbody>
					<% @mkp.features.each do |k, v| %>
					<% if v.length > 0 %>
					<tr>
						<td><i class="fa fa-check">&nbsp;</i></td>
						<td><%= v.capitalize %></td>
					</tr>
					<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
</div>

<% end %>
<%= render :template => users_show_path %>
