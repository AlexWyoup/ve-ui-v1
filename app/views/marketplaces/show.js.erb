var selected_entity = '#version_view';
<% if @mkp["cattype"] == Api::Assemblies::APP  %>
var to_insert_content = "<%= escape_javascript(render :partial => 'marketplaces/apps', :locals => {:version => @mkp["sversion"], :mkp => @mkp}) %>";
<% elsif @mkp["cattype"] == Api::Assemblies::SERVICE  %>
var to_insert_content = "<%= escape_javascript(render :partial => 'marketplaces/service', :locals => {:version => @mkp["sversion"], :mkp => @mkp, :unbound_apps => @unbound_apps}) %>";
<% elsif @mkp["cattype"] == Api::Assemblies::ANALYTICS %>
var to_insert_content = "<%= escape_javascript(render :partial => 'marketplaces/analytics', :locals => {:version => @mkp["sversion"], :mkp => @mkp}) %>";
<% elsif @mkp["cattype"] == Api::Assemblies::TORPEDO %>
var to_insert_content = "<%= escape_javascript(render :partial => 'marketplaces/torpedo', :locals => {:version => @mkp["sversion"], :mkp => @mkp, :ssh_keys => @ssh_keys}) %>";
<% elsif @mkp["cattype"] == Api::Assemblies::COLLABORATION %>
var to_insert_content = "<%= escape_javascript(render :partial => 'marketplaces/collaboration', :locals => {:version => @mkp["sversion"], :mkp => @mkp, :ssh_keys => @ssh_keys}) %>";
<% elsif @mkp["cattype"] == Api::Assemblies::MICROSERVICES %>
var to_insert_content = "<%= escape_javascript(render :partial => 'marketplaces/docker', :locals => {:version => @mkp["sversion"], :mkp => @mkp, :ssh_keys => @ssh_keys}) %>";
<% else %>
var to_insert_content = "<%= escape_javascript(render :partial => 'marketplaces/docker', :locals => {:version => @mkp["sversion"], :mkp => @mkp}) %>";
<% end %>
insertAt(selected_entity, to_insert_content);

$('#replace_image').empty();
$('#replace_image').html('<img src=<%= "assets/mlogos/#{@mkp["image"]}" %>>');

$('#replace_version_tag').empty();
$('#replace_version_tag').html(' <%= escape_javascript(select_tag "version", options_for_select(@mkp["versions"], :selected=>@mkp["sversion"]), :class =>"form-control input-sm", :data => { :remote => true, :url => marketplace_path(:id => @mkp["flavor"] ) }) %>');
$("#app-1").modal('show');


$(document).ready(function() {
    $("#megamform").validate({
        rules : {
            check_req : {
                required : true
            }
        },
        messages : {
            check_req : "Just check the box"
        },
         tooltip_options: {
            check_req : {placement:'right',html:true}
         }
    });

});
