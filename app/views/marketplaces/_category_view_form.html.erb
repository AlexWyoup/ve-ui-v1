<div class="alert alert-info">
	The <span class="badge badge-success">supported</span> addons are marked by a <i class="fa fa-check-circle-o"> </i>
	Click on the addon to select it.
</div>
<div class="widget-box">
	<div class="widget-title">
		<nav class="navbar navbar-default" role="navigation">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<div class="nav navbar-nav" id="filters">
					<br/>
					<select class="option-set clearfix"  data-filter-group="category">
						<option value="*" data-filter-value="" class="selected">All</option>
						<% categories.sort.each do |cat| %>
						<option value="#filter-category-<%= cat %>" data-filter-value=".<%= cat %>"><%= cat %></option>
						<% end %>
					</select>
					</br>
				</div>
				<form class="navbar-form navbar-right" role="search">
					<div class="form-group">
						<input type="text" class="form-control">
					</div>
					<a href="#" class="btn btn-default" >Search</a>
				</form>
			</div><!-- /.navbar-collapse -->
		</nav>
	</div>
	<div class="widget-content">
		<br/>
		</br/>
		<div class="row">
			<div class="col-lg-12">
				<br/>
				<div id="iso_container">
					<div class="gallery-masonry" >
						<% order.each do |name| %>
						<% mkp_collection.each do |mkp| %>
						<%if name == mkp.name %>
						<div class="item produkt-element  <%= mkp.appdetails[:category] %>" id='<%= mkp.appdetails[:category] %>' >
							<div class="well well-lg alert alert-success">
								<a href="#"  > 
								<% case mkp.approved  %>
								<% when "true" %> 
								<i class="fa fa-check-circle-o"></i> 
								<% when "false" %> 
								<i class="fa"></i> 
								<% end %>
								<%= image_tag mkp.appdetails[:logo], :alt => mkp.name %> </a>
							</div>
							<div class="actions">
								<div class="actions-inner">
									<%= link_to  marketplace_path(:id => mkp.name), :target => "_self", title: "Open" do %><i class="fa fa-folder-open"></i><%end%>
								</div>
							</div>
						</div>

						<% end %>
						<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>