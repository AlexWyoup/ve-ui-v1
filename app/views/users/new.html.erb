<% provide(:title, 'Sign up') %>
<div class="row-fluid">
	<%= render :partial => "customizations/flash_messages" %>
</div>
<div class="container-fluid">

	<div class="row">
		<div class="span5">
			<div id="box_sign">
				<div class="container">
					<div class="box_wrapper">
						<div class="box">
							<div>
								<div class="head">
									<h4>Create your account</h4>
								</div>
								<div class="form">
									<%= render :partial => "users/create_user" , :locals => {:user => @user, :method => 'post'}%>
								</div>
							</div>
						</div>
					</div>
					<div class="span4 offset1">
						<p class="already">
							Already have an account? <%= link_to "Sign in", signin_path %>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="span7 widget-content">
			<div id="blog_wrapper">
				<div class="post">
					<div class="row-fluid">
						<div class="span2">
							<%= image_tag "helpbota.png", :alt => "helpbot",:class => "main_pic", :alt => "helpbot"%>
						</div>
						<div class="span5 info">
							<a href="#somedoclink"> <h3>Beta - Launch your Apps !</h3> <span class="badge badge-info">free</span></a>
							<strong>Cross cloud and monitor them. 
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="span7 widget-content">
			<div id="myCarousel" class="carousel slide">
				<div class="carousel-inner">
					<div class="item active">
						<%= image_tag "sales_pitch1.png", :alt => "Cloud computing"%>

						<div class="carousel-caption">
							<h4>Cloud Apps</h4>
							<p>
								Tech stack : Java, Scala, Playframework(Scala), RoR, Node.js, others soon.
							</p>
						</div>
					</div>
					<div class="item">
						<%= image_tag "sales_pitch2.png", :alt => "Cloud identity"%>
						<div class="carousel-caption">
							<h4>Metered & Monitored</h4>
							<p>
								Monitor your cloud books (instances) for free.
							</p>
						</div>
					</div>
					<div class="item">
						<%= image_tag "sales_pitch3.png", :alt => "Cloud integration"%>
						<div class="carousel-caption">
							<h4>API, CLI & Preview of cloud connectors</h4>
							<p>
								Powerful REST API, CLI $ >, and Preview - cloud connectors to salesforce CRM, Google App, ZoHoCRM, Twilio and more.
							</p>
						</div>
					</div>
				</div>
				<a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
				<a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
			</div>

		</div>
	</div>
</div>
