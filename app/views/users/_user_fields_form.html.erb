<%= form_for @user, :html => { :multipart => true } do |f| %>
<div class="span10">
	<%= render 'shared/error_messages', object: f.object %>
</div>
<div class="span4">
	<h2>Personal Info </h2>
	<%= f.label :first_name %>
	<%= f.text_field :first_name, :class => 'text_field' %>
	<%= f.label :last_name %>
	<%= f.text_field :last_name, :class => 'text_field' %>

	<%= f.label :phone %>
	<%= f.text_field :phone, :class => 'text_field' %>
	<%= f.label :email %>
	<%= f.text_field :email, :class => 'text_field' %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %>
	<hr>
	</hr>
	<% if !current_user.nil? && current_user.admin? %>
	<p></p>
	<%= f.fields_for :organization_attributes, @user.organization do |org_f| %>
	<h2>Account Info </h2>
	<%= org_f.label :name, "Organization Name" %>
	<%= org_f.text_field :name %>
	<%= org_f.label :account_name %>
	<%= org_f.text_field :account_name %>
	<%= org_f.label :url %>
	<%= org_f.text_field :url %>
	<%= org_f.label :name, "Your organization logo" %>
	<%= org_f.file_field :logo %>
	<br></br>
	<%= link_to "delete", @user, method: :delete,
	data: { confirm: "You sure?" } %>
	<br></br>

	<% end %>
	
	<% end %>
	<%= f.submit nil, :class => 'btn btn-large btn-primary' %>
</div>
<% end %>
