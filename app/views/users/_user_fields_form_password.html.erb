
<%= form_for @user, :html => {:id =>'password_validate', :novalidate => 'novalidate', :class => 'user_fields_form_password' }, :method => method do |f| %>

<input type="hidden" name="user_fields_form_type" value="<%= user_fields_form_type.to_s %>">
<div class="control-group">
	<div class="controls">
		<%= f.password_field :password,:class=> 'required', placeholder: "Password" %>
	</div>
</div>

<div class="control-group">
	<div class="controls">
		<%= f.password_field :password_confirmation,  :class=> 'required', placeholder: "Confirm password" %>
	</div>
</div>


<%= link_to "update", user_path(:id => current_user.id, :password => 'thilakmca', :password_confirmation => 'thilakmca', :user_fields_form_type => 'password'), id:  "user_fields_form_password", class: "btn", :method => method, :type => 'submit', :remote => true, data: { spinner: '#spin_user_password'}  %>
<% end %>
