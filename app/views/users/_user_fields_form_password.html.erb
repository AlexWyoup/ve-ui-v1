<div id="profilebox_small">
	<%= form_for @user, :html => {:id =>'password_validate', :novalidate => 'novalidate', :class => 'user_fields_form_password' }, :remote => true, data: { spinlock: '#spin_user_profile'}, :method => method do |f| %>

	<input type="hidden" name="user_fields_form_type" value="<%= user_fields_form_type.to_s %>">
	<div class="input-group">
		<span class="input-group-addon"><i class="icon-lock"></i></span>
		<%= f.password_field :password, :class=> 'form-control required', placeholder: "Password" %>
	</div>
	<div class="input-group">
		<span class="input-group-addon"><i class="icon-lock"></i></span>
		<%= f.password_field :password_confirmation,  :class=> 'form-control required', placeholder: "Confirm password" %>
	</div>

	<%= f.submit "Update", :id => "submit_update", :class => "btn btn-default" %>
	<% end %>
</div>