<% content_for :content_settings do %>
<%= provide(:title, 'Edit user') %>
<%= render :partial => "users/header" , :locals => {:head => "My Profile"}%>


<div id="breadcrumb">
	<%= render_breadcrumbs %>
</div>

<div class="container-fluid">
	<div class="span12">
		<div class="span5">
			<div class="alert_flash_email"></div>
			<div id="box_sign">
				<div class="container">
					<div class="box_wrapper">
						<div class="box">
							<div>
								<div class="head">
									<span class="icon"> <i class="fa fa-smile-o"></i> </span>

									<h4>My Account</h4>
								</div>
								<div class="form">
									<%= render :partial => "users/user_fields_form_email", :locals => {:user => @user, :user_fields_form_type => 'user', :method => 'patch'} %>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
		<div class="span5">
			<div id="box_sign">
				<div class="container">
					<div class="box_wrapper">
						<div class="box">
							<div>
								<div class="head">
									<span class="icon"> <i class="fa fa-group"></i> </span>
									<h4>Organization&nbsp;<span class="label label-info"> <% if current_user.admin %>
										administrator
										<% else %>
										user
										<% end %> </span></h4>
								</div>
								<div class="form">
									<%= render :partial => "users/organization_fields_form", :locals => {:user => @user, :user_fields_form_type => "organization"} %>
								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span12">
		<div class="span5">
			<div class="alert_flash_password"></div>
			<div id="box_sign">
				<div class="container">
					<div id="box_wrapper">
						<div class="box">
							<div>
								<div class="head">
									<span class="icon"> <i class="fa fa-lock"></i> </span>
									<h4>Password</h4>
								</div>
								<div class="form">
									<%= render :partial => "users/user_fields_form_password", :locals => {:user => @user, :user_fields_form_type => "password", :method => 'patch'} %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="span5">
			<div id="box_sign">
				<div class="container">
					<div id="box_wrapper">
						<div class="box">
							<div>
								<div class="head">
									<span class="icon"> <i class="fa fa-unlock-alt"></i> </span>
									<h4>API Key <span class="label label-info"><%= @user.user_type %>&nbsp; plan</span></h4>
								</div>
								<div class="form">
									<%= render :partial => "users/user_fields_form_api_key", :locals => {:user => @user, :user_fields_form_type => "api_key", :method => 'patch'} %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="profile_postfinish_popup" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
			Ã—
		</button>
		<h3 id="myModalLabel">Profile Update</h3>
	</div>
	<div class="modal-body">
		<div class="alert alert-success">
			<div id="msg"></div>
		</div>
	</div>
	<div class="modal-footer">
		<%= link_to "Ok", dashboards_path, :class => "btn btn-primary" %>
	</div>
</div>

<% end %>
<%= render :template => users_show_path %>