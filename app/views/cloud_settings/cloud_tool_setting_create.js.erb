<% if @err_msg != nil %>

var selected_entity = '#cloud_tool_setting_postfinish_popup_error';
$("#err_msg").append('<%= @err_msg %>');
$(selected_entity).modal('show');

<% else %>

var selected_entity = '#cloud_tool_setting_postfinish_popup';

$("#cloudtoolsettings_path").append('<%= link_to  "Ok", cloud_settings_path, :class => "btn btn-primary", :target => "_self" %>');
$("#res_msg").append('<%= @res_msg %>');
$(selected_entity).modal('show');

<% end %>