<div class="widget-box nopadding">
	<div class="widget-title">
		<span class="icon"> <i class="icon-th-list"></i> </span>
		<h5>SSH Keys Activity</h5>
		<div class="buttons">
			<%= link_to new_ssh_key_path, class: "btn", :id => "popover_sshkey_new", :target => "_self" do %>
			<i class="icon-cloud">&nbsp;New</i>
			<% end %>

			<%= link_to ssh_key_import_path, class: "btn", :id => "popover_sshkey_import", :target => "_self" do %>
			<i class="icon-cloud-upload">&nbsp;Import</i>
			<% end %>
		</div>
	</div>
	<div class="widget-content" >
		<div class="row"">
		<div class="col-md-12">
		<% if !@ssh_keys.nil? %>
		<h5 align="Center"><span class="icon"> <i class="icon-calendar"></i> </span><b><%= @ssh_keys.last[:created_at] %></b></h5>
		<h5 align="Center"><%= link_to "#{@ssh_keys.last[:name]}", sshkeys_download_path(:filename =>"#{@ssh_keys.last[:name]}" + ".pub"), :remote => true, data: { spinlock: '#sshkey_current'} %> </h5>
		<% else %>
		<div class="alert alert-success alert-block">
		You don't have any SSH Keys yet. Just click New(or) Import.
		</div>
		<% end %>
		</div>
		</div>
		</div>
		</div>

		<div class="widget-box nopadding">
		<div class="widget-title">
		<span class="icon"> <i class="icon-th"></i> </span>
		<h5>SSH Keys</h5>
		</div>
		<div class="widget-content nopadding">
		<% if @ssh_keys_collection.class != Megam::Error %>
		<table class="table table-bordered table-striped table-hover">
		<thead>
		<tr>
		<th>Actions</th>
		<th>Name</th>
		<th>Created At</th>
		</tr>
		</thead>
		<tbody>
		<% @ssh_keys.each do |sshkey| %>
		<tr>
		<td align="center">
		<%= link_to  sshkeys_download_path(:filename => sshkey[:name]+".pub"), :class => "btn btn-dark-blue" , :target => "_self" do %> <i class="icon-cloud-download">&nbsp;Pub</i> <% end %>
		<%= link_to  sshkeys_download_path(:filename => sshkey[:name]+".key"), :class => "btn btn-dark-red", :target => "_self" do %> <i class="icon-cloud-download">&nbsp;Private</i> <% end %> </td> <td align="center"><%= sshkey[:name] %></td>
		<td align="center"><span class="icon"> <i class="icon-calendar"></i> </span> <%= sshkey[:created_at] %></td>
		</tr>
		<% end %>
		</tbody>
		</table>
		<% end %>
	</div>
</div>
