<% content_for :content_settings do %>
<% provide(:title, 'Manage Settings') %>
<%= render :partial => "users/header" , :locals => {:head => "Manage Settings"}%>
<div id="breadcrumb">
	<%= breadcrumbs.render(:format => :inline, :separator => '') %>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-11 col-sm-11 col-md-11">
			<div class="widget-box nopadding">
				<div class="widget-title">
					<ul class="nav nav-tabs">
						<li class="active">
							<a data-toggle="tab" href="#sshkeys_tab" ><i class="icon-certificate"></i> SSH Keys</a>
						</li>
						<li>
							<a data-toggle="tab" href="#cross_cloud_tab"><i class="icon-cloud"></i>Clouds</a>
						</li>
						<li>
							<a data-toggle="tab" href="#cloud_tools_tab"><i class="icon-tasks"></i>Cloud Provisioners</a>
						</li>
					</ul>
				</div>
				<div class="widget-content tab-content">
					<div id="sshkeys_tab" class="tab-pane active">
						<%= render :partial => "cloud_settings/sshkey_index" %>
					</div>
					<div id="cross_cloud_tab" class="tab-pane">
						<%= render :partial => "cloud_settings/cross_cloud_index" %>
					</div>
					<div id="cloud_tools_tab" class="tab-pane">
						<%= render :partial => "cloud_settings/cloud_tool_index" %>
					</div>					
				</div>
			</div>
		</div>
	</div>
</div>

<% end %>
<%= render :template => users_show_path %>
