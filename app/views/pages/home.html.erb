<div id="hero">
	<div class="container">
		<!-- starts carousel -->
		<div class="row animated fadeInDown">
			<div class="span12">
				<div id="myCarousel" class="carousel slide">
					<!-- carousel items -->
					<div class="carousel-inner">
						<!-- slide -->
						<div class="active item slide1">
							<div class="row">
								<div class="span6">
									<%= image_tag "slide1.png", :alt => "slide 1"%>
								</div>
								<div class="span4">
									<h1> Code to Cloud </h1>
									<p>
										Minutes to your code in cloud. We support Java, Ruby on Rails, Node.js, Scala(Play) and Akka.
									</p>
									<%= link_to "Get Started Now!",   page_path("get_started"), :class=>"btn btn-success btn-large" %>
								</div>
							</div>
						</div>
						<!-- slide -->
						<div class="item slide2">
							<div class="row">
								<div class="span4 animated fadeInUpBig">
									<h1>Live Cloud Ready</h1>
									<p>
										Want to federate your Cloud Identity with your Cloud Applications ? {Salesforce, GoogleApp, SugarCRM, Liferay}
									</p>
									<%= link_to "Get Started Now!",   page_path("get_started"), :class=>"btn btn-success btn-large" %>

								</div>
								<div class="span6 animated fadeInDownBig">
									<p>
										<iframe src="http://player.vimeo.com/video/38514156" width="500" height="281" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>

										<a href="http://vimeo.com/38514156">Megam Platform - What is it ?</a> on <a href="http://vimeo.com">Vimeo</a>.
									</p>
								</div>
							</div>
						</div>
						<!-- slide -->
						<div class="item slide3 animated fadeInUpBig">
							<%= image_tag "slide3.png", :alt => "slider 3"%>
						</div>
					</div>
					<!-- Carousel nav -->
					<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
					<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="intro">
	<div class="container">
		<h1>Measure is a beautiful Wrapbootstrap theme for
		businesses and creative professionals.</h1>
	</div>
</div>
