<% content_for :content_settings do %>
<% provide(:title, 'Marketplace') %>

<%= render :partial => "users/header" , :locals => {:head => "Marketplace"}%>
<div id="breadcrumb">
	<%= breadcrumbs.render(:format => :inline,:separator => '') %>
</div>
<div class="container">
	<div class="row divborder">
		<div class="col-md-12" >
			<div class="col-md-2">
				<a href="#" > <%= image_tag @mkp[:logo], :alt => @mkp[:name], :class => "megam_image" %> </a>
				<br/>
				<br/>
			</div>
			<div class="col-md-4">
				<p>
					<strong><h3><%= @mkp[:name].upcase %></h3></strong>
				</p>
				<p>
					<h5><%= @mkp[:catagory].upcase %></h5>
				</p>
			</div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-6">
				<ul class="list-group">
					<li class="list-group-item">
						<span class="badge"><h4><%= @mkp[:plan][:plantype]%></h4></span>
						<h4>Plan Type</h4>
					</li>
					<li class="list-group-item">
						<span class="badge"><h4><%= @mkp[:plan][:price]%></h4></span>
						<h4>Price</h4>
					</li>
					<li class="list-group-item">
						<span class="badge"><h4><%= @mkp[:plan][:description]%></h4></span>
						<h4>Description</h4>
					</li>
				</ul>
			</div>
			<div class="col-md-6">
				<% if @mkp[:approved] == "true" %>
				<%= render :partial => "market_places/add_button", :locals => {:name => @mkp[:name], :category => @mkp[:catagory]} %>
				<br/>
				<% if @mkp[:attach] == "true" %>
				<!--<h4 class="divborder">Attach options</h4>-->
				<div class="well well-lg">
					<div class="form-group">
						<label class="col-sm-4 col-md-4 col-lg-3 control-label">Select App</label>
						<div class="col-sm-8 col-md-8 col-lg-9">
							<%= select_tag 'App', options_for_select(@my_apps.insert(0, "Select a App")), :id => "attach_app_select", :style => "width:300px; height:30px;" %>
						</div>
					</div>
					<br/>
					<button class="btn btn-warning btn-block btn-lg">
						Attach
					</button>
				</div>
				<% else %>
				<div class="alert alert-info alert-block">
					<a class="close" data-dismiss="alert" href="#">×</a>
					<h4 class="alert-heading">Work Inprogress!</h4>
					This Addon doesn't attach any app now.
				</div>
				<% end %>
				<% else %>
				<div class="alert alert-info alert-block">
					<a class="close" data-dismiss="alert" href="#">×</a>
					<h4 class="alert-heading">Work Inprogress!</h4>
					This Addon doesn't Launch and Attach.
				</div>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="col-md-12">
			<div class="col-md-12">
				<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
					<!-- Indicators -->
					<ol class="carousel-indicators">
						<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
						<li data-target="#carousel-example-generic" data-slide-to="1"></li>
						<li data-target="#carousel-example-generic" data-slide-to="2"></li>
					</ol>

					<!-- Wrapper for slides -->
					<div class="carousel-inner">
						<div class="item active">
							<div class="col-md-12">
								<div class="col-md-3"></div>
								<div class="col-md-6">
									<p>
										<h4><%= @mkp[:features][:feature1]%></h4>
									</p>
								</div>
								<div class="col-md-3"></div>
							</div>
						</div>
						<div class="item">
							<div class="col-md-12">
								<div class="col-md-3"></div>
								<div class="col-md-6">
									<p>
										<h4><%= @mkp[:features][:feature2]%></h4>
									</p>
								</div>
								<div class="col-md-3"></div>
							</div>
						</div>
						<div class="item">
							<div class="col-md-12">
								<div class="col-md-3"></div>
								<div class="col-md-6">
									<p>
										<h4><%= @mkp[:features][:feature3]%></h4>
									</p>
								</div>
								<div class="col-md-3"></div>
							</div>
						</div>
						<div class="item">
							<div class="col-md-12">
								<div class="col-md-3"></div>
								<div class="col-md-6">
									<p>
										<h4><%= @mkp[:features][:feature4]%></h4>
									</p>
								</div>
								<div class="col-md-3"></div>
							</div>
						</div>
					</div>

					<!-- Controls -->
					<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left"></span> </a>
					<a class="right carousel-control" href="#carousel-example-generic" data-slide="next"> <span class="glyphicon glyphicon-chevron-right"></span> </a>
				</div>
				<br/>
				</br/>
			</div>
		</div>
	</div>
</div>

<% end %>
<%= render :template => users_show_path %>
