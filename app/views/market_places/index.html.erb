<% content_for :content_settings do %>
<% provide(:title, 'Marketplace') %>

<%= render :partial => "users/header" , :locals => {:head => "Marketplace"}%>
<div id="breadcrumb">
	<%= breadcrumbs.render(:format => :inline,:separator => '') %>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-11">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<p class="help-block">
						<%= image_tag "helpbota.png", :alt => "help bot"%>
						<h4 class="alert-heading">Welcome. Not sure what to do next?
					</p>
				</div>
				<div class="panel-body">
					<div class="alert alert-info alert-block">
						<div>
							Get started with...
							<table class="table table-hover">
								<thead></thead>
								<tbody>
									<tr>
										<td><span class="badge badge-info">Marketplace</span></td>
										<td><i class="fa fa-shopping-cart"> </i>
										<code>
											Wordpress
										</code> <%= link_to  "A ready to deploy, general purpose wordpress package with MySQL database.", market_places_path, :target => "_self", title: "Lauch your wordpress app in megam"  %> </td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div>
						<i class="fa fa-chevron-left"></i>&nbsp; &nbsp; Click <span class="badge badge-important"> Launch. </span>
						</br>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-11"  id="category_view_value">
			<%= render :partial => "market_places/category_view_form" , :locals => {:category => "All", :mkp_collection => @mkp_collection, :categories => @categories}%>			
		</div>
	</div>
</div>

<% end %>
<%= render :template => users_show_path %>
