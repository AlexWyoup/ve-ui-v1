<% content_for :content_settings do %>
<% provide(:title, 'Dashboard') %>

<%= render :partial => "contents/header" , :locals => {:head => "Dashboard"}%>

<div id="breadcrumb">
	<%= render_breadcrumbs %>
</div>

<div class="container-fluid">

	<div class="row-fluid">
		<div class="span12 center" style="text-align: center;">

			<%= render :partial => "widgets/booksRunning" %>
		</div>
	</div>
	 <div class="row-fluid">
        <div id="main" class="span12">
          <ng-view ng-show="resolved" ng-cloak></ng-view>
          <!--<div ui-view></div>-->
        </div>
      </div>
	<div ng-controller='GraphWidgetCtrl'>
		<div class="btn-group">
			<button class="btn btn-primary">
				Select Source...
			</button>
			<button data-toggle="dropdown" class="btn btn-primary dropdown-toggle">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li ng-repeat="w in availableNodes">
					<a href="#" ng-click="changeNode(w)" remote=true>{{w}}</a>
				</li>
			</ul>
		</div>
		<p>
			<button ng-click='change()'>
				Change Data
			</button>
		</p>
		<div class="widget-box">
			<div class="widget-title">
				<span class="icon"><i class="icon-signal"></i></span><h5>Site Statistics</h5>
				<div class="buttons">
					<a href="#" class="btn btn-mini"><i class="icon-refresh"></i> Update stats</a>
				</div>
			</div>
			<div class="widget-content">
				<div class="row-fluid">
					<div class="span4">
						<ul class="site-stats">
							<li>
								<i class="icon-user"></i><strong>1433</strong><small>Total Books</small>
							</li>
							<li>
								<i class="icon-arrow-right"></i><strong>16</strong><small>New Books (last week)</small>
							</li>
							<li class="divider"></li>
							<li>
								<i class="icon-shopping-cart"></i><strong>11259</strong><small>Total Requests</small>
							</li>
							<li>
								<i class="icon-tag"></i><strong>8650</strong><small>Total Uptime(days)</small>
							</li>
							<li>
								<i class="icon-repeat"></i><strong>29</strong><small>Total Queue Messages</small>
							</li>
						</ul>
					</div>
					<div class="span8">
						<!--<graph ng-model='data' style="width:700px; height:984px;"></graph>-->
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
<% end %>
<%= render :template => users_show_path %>
