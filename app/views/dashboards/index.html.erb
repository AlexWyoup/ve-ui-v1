 <% content_for :content_settings do %>
<% provide(:title, 'Dashboard') %>

<%= render :partial => "contents/header" , :locals => {:head => "Dashboard"}%>

<div id="breadcrumb">
	<%= render_breadcrumbs %>
</div>

<div class="container-fluid" ng-cloak>
	
	<div class="row-fluid">
		<div id="main" class="span12">
			<ng-view ng-show="resolved" ng-cloak></ng-view>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<div class="widget-box">
				<div class="widget-title">
					<span class="icon"><i class="icon-time"></i></span>
					<h5>Ready to dive in.</h5>
					<span class="label label-info">5 Simple steps</span>
				</div>
				<div class="widget-content">
					<div class="accordion" id="collapse-group">
						<div class="accordion-group widget-box">
							<div class="accordion-heading">
								<div class="widget-title">
									<a data-parent="#collapse-group" href="#collapseGOne" data-toggle="collapse"> <span class="icon"><i class="icon-magnet"></i></span><h5>Step 1: Verify your email address - <%= current_user.email %></h5> </a>
								</div>
							</div>
							<div class="collapse accordion-body" id="collapseGOne">
								<div class="widget-content">
									<div class="container-fluid">
										<% if !current_user.verified_email %>
										<%= current_user.email %>
										  <%= link_to 'Verify', email_verify_path(current_user.verification_hash), :class => "btn btn-warning btn-mini", :remote => true, :target => "_self", :data => {spinner: '#spin_mail'}, title: 'Verify your email for megam communication like billing, notifications etc', rel: 'tooltip' %>
	<%= mini_spinner_tag 'spin_mail' %>

<a href="#" class="tip2">Hover over me!<span>Hi, There. I like turtles.</span></a>

									<% else %>
										Hi <%= current_user.first_name %>, Great ! <span class="label label-success">verified <%= current_user.email %>. </span>Thank you.
										<% end %>
									</div>
								</div>
							</div>
						</div>
						<div class="accordion-group widget-box">
							<div class="accordion-heading">
								<div class="widget-title">
									<a data-parent="#collapse-group" href="#collapseGTwo" data-toggle="collapse"> <span class="icon"><i class="icon-magnet"></i></span><h5>Step 2: Update your profile</h5> </a>
								</div>
							</div>
							<div class="collapse in accordion-body" id="collapseGTwo">
								<div class="widget-content">
									<div class="container-fluid">
										<% if !current_user.organization %>
										<%= link_to "Update", edit_user_path(current_user), class: "btn btn-warning btn-mini", :target => "_self", title: 'Update your organization deatils', rel: 'tooltip'  %> your profile
										<% else %>
										<%= current_user.first_name.capitalize %>, Great ! your profile is <span class="label label-info">up-to date.</span> Thank you.
										<% end %>
									</div>
								</div>
							</div>
						</div>
						<div class="accordion-group widget-box">
							<div class="accordion-heading">
								<div class="widget-title">
									<a data-parent="#collapse-group" href="#collapseGThree" data-toggle="collapse"> <span class="icon"><i class="icon-magnet"></i></span><h5>Step 3: Launch a Cloud Book </h5> <span class="label label-info">Java/Play/RoR/Node.js</span></a>
								</div>
							</div>
							<div class="collapse accordion-body" id="collapseGThree">
								<div class="widget-content">
									<% if !current_user.cloud_books  %>
									<%= link_to "Take me there", new_cloud_book_path, :target => "_self" , class: "btn btn-warning btn-mini"  %>Profile
									<% else %>
									Awesome ! <span class="label label-success"> you have one.</span>
									<%= link_to "Take me there", cloud_books_path, :target => "_self" , class: "btn btn-success btn-mini"  %>
									<% end %>
								</div>
							</div>
						</div>
						<div class="accordion-group widget-box">
							<div class="accordion-heading">
								<div class="widget-title">
									<a data-parent="#collapse-group" href="#collapseGFour" data-toggle="collapse"> <span class="icon"><i class="icon-magnet"></i></span><h5>Step 4: Customize Cross Cloud defaults</h5> <span class="label label-warning">*optional</span></a>
								</div>
							</div>
							<div class="collapse accordion-body" id="collapseGFour">
								<div class="widget-content">
									<div class="container-fluid">
										<% if !current_user.cloud_identities %>
										<%= link_to "Take me there", new_apps_item_path, :target => "_self" , class: "btn btn-warning btn-mini"  %>Profile
										<% else %>
										Super cool ! <span class="label label-success"> you have added cloud apps.</span>
										<%= link_to "Take me there", cloud_identity_path(current_user.id), :target => "_self" , class: "btn btn-success btn-mini"  %>
										<% end %>
									</div>
								</div>
							</div>
						</div>
						<div class="accordion-group widget-box">
							<div class="accordion-heading">
								<div class="widget-title">
									<a data-parent="#collapse-group" href="#collapseGFive" data-toggle="collapse"> <span class="icon"><i class="icon-magnet"></i></span><h5>Step 5: Github Account ? </h5></a>
								</div>
							</div>
							<div class="collapse accordion-body" id="collapseGFive">
								<div class="widget-content">
									Others scms, coming soon.
									Awesome ! <span class="label label-success"> you have one.</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="span6">
			<div class="widget-box">
				<div class="widget-title">
					<span class="icon"><i class="icon-time"></i></span>
					<h5>You have got questions ? We have got answers.</h5>
					<span class="label label-info">5</span>
				</div>
				<div class="widget-content nopadding">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>?</th>
								<th>Answer</th>
								<th>Did it help?</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="taskDesc"><i class="icon-info-sign"></i> How can I update my profile ?</td>
								<td class="taskStatus"><span class="in-progress"> <a href="">here</a></span></td>
								<td class="taskOptions"><a href="#like" class="tip-top" data-original-title="Yup"><i class="icon-thumbs-up"></i></a>&nbsp;<a href="somedoclink" class="tip-top" data-original-title="Nah"><i class="icon-thumbs-down"></i></a></td>
							</tr>
							<tr>
								<td class="taskDesc"><i class="icon-plus-sign"></i> How can I setup a cloud book ?</td>
								<td class="taskStatus"><span class="pending"> <a href="">here</a></span></td>
								<td class="taskOptions"><a href="#like" class="tip-top" data-original-title="Yup"><i class="icon-thumbs-up"></i></a>&nbsp;<a href="somedoclink" class="tip-top" data-original-title="Nah"><i class="icon-thumbs-down"></i></a></td>
							</tr>
							<tr>
								<td class="taskDesc"><i class="icon-plus-sign"></i> Launch a Java App ?</td>
								<td class="taskStatus"><span class="pending"> <a href="">here</a></span></td>
								<td class="taskOptions"><a href="#like" class="tip-top" data-original-title="Yup"><i class="icon-thumbs-up"></i></a>&nbsp;<a href="somedoclink" class="tip-top" data-original-title="Nah"><i class="icon-thumbs-down"></i></a></td>
							</tr>
							<tr>
								<td class="taskDesc"><i class="icon-plus-sign"></i> Launch a Playframework App ?</td>
								<td class="taskStatus"><span class="pending"> <a href="">here</a></span></td>
								<td class="taskOptions"><a href="#like" class="tip-top" data-original-title="Yup"><i class="icon-thumbs-up"></i></a>&nbsp;<a href="somedoclink" class="tip-top" data-original-title="Nah"><i class="icon-thumbs-down"></i></a></td>
							</tr>
							<tr>
								<td class="taskDesc"><i class="icon-ok-sign"></i> Why do I need to use Github ?</td>
								<td class="taskStatus"><span class="done"> <a href="">here</a></span></td>
								<td class="taskOptions"><a href="#like" class="tip-top" data-original-title="Yup"><i class="icon-thumbs-up"></i></a>&nbsp;<a href="somedoclink" class="tip-top" data-original-title="Nah"><i class="icon-thumbs-down"></i></a></td>
							</tr>
							<tr>
								<td class="taskDesc"><i class="icon-plus-sign"></i> Meter and monitor - Cloud books ?</td>
								<td class="taskStatus"><span class="pending"> <a href="">here</a></span></td>
								<td class="taskOptions"><a href="#like" class="tip-top" data-original-title="Yup"><i class="icon-thumbs-up"></i></a>&nbsp;<a href="somedoclink" class="tip-top" data-original-title="Nah"><i class="icon-thumbs-down"></i></a></td>
							</tr>
							<tr>
								<td class="taskDesc"><i class="icon-ok-sign"></i> Request for a feature</td>
								<td class="taskStatus"><span class="done"> <a href="">Great. sure</a></span></td>
								<td class="taskOptions"><a href="#like" class="tip-top" data-original-title="Likes old requests (Vote now)"><i class="icon-thumbs-up"></i></a></td>
							</tr>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>




	<div id="email_verify_popup" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
				Ã—
			</button>
			<h3 id="myModalLabel">Email Verification</h3>
		</div>
		<div class="modal-body">
			<div class="alert">

				<div id="msg">
					Email has been sent to <%= current_user.email %> for email verification. Please check your email and follow the instructions
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">
				Ok
			</button>
		</div>
	</div>



</div>
<% end %>
