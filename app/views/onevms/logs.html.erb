<% content_for :onevm_contents do %>
<% provide(:title, 'Metrics') %>

<div class="rt-box col-xs-12 col-sm-8 col-md-9 col-lg-9 col-xl-9" ng-controller="LogCtrl">

	<div class="row c_pading-b15 settings_top">
		<div class="margin_15">
			<div class="col-xs-9 col-sm-6 col-md-7">
				<h3> Logs </h3>

			</div>
			<%= render :partial => "users/topright_icons" %>
		</div>
	</div>
	<!-- <input type="text"  value="<%= @com_books %>" > -->
	
	<br/>
	
	<div class="row">
		<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 col-xl-3" style="max-height:500px">

			<table class="table tb_action_list">
				<tbody>
				    <tr>
				      <td><a title="" href="" ng-init="sendmessage('<%= @appname %>')"></td>
				    </tr>
									
									

				</tbody>
			</table>
		</div>
		<div class="bottom-divider"></div>
		<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 col-xl-9" style="max-height:500px; overflow-y:scroll">
			<table class="table tb_action_list">
				<thead>
					<tr>
						<th>Timestamp</th>
						<th>Message</th>
					</tr>
				</thead>
				<tbody>
					<tr ng-repeat="log in logs | orderBy:predicate:!reverse | slice:0:100">
						<div us-spinner ng-hide="spinneractive">
							
						<td>
						<p><
							<small> {{ log.Timestamp | date:'d MMM yy, hh:mm a Z' }}</small>
						</p></td>
						
						<td>
						<p>
							<small>{{log.Payload }}</small>
						</p></td>
						</div>
					</tr>
					
				</tbody>
			</table>
		</div>
	</div>
	
</div>
<% end %>
<script>
    (function($) {   
    $.SocketURL = "<%= @socketURL %>";
     })($);
</script>
<%= render :template => onevms_show_path %>

