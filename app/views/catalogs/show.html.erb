<%= render 'layouts/header' %>
<% asmid = request.original_url.partition('=').last %>
<div class="container main-cover">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 col-xl-3 c_bg_white cover">
      <div class="row">
        <div class="page-sidebar navbar-collapse collapse">
          <!-- BEGIN SIDEBAR MENU -->
          <ul class="page-sidebar-menu">
            <li></li>
            <li class="start" >
              <%= link_to cockpits_path , :data => {:remote => true} do %>
                <i class="icon-chevron-sign-left pull-left"></i>
                <span class="title pull-left">Back to Dashboard</span>
                <span class="selected hidden-xs"></span>
              <% end %>
            </li>
            <li class= "start active">
              <%= link_to onedews_path(:id => asmid), :data => {:remote => true} do %>
                <i class="icon-bar-chart pull-left"></i>
                <span class="title pull-left">Overview</span>
                <span class="hidden-xs <%= "selected" if current_page?(:controller => 'catalogs', :action => 'index')%>"></span>
              <% end %>
            </li>
            <li class="start">
               <%= link_to runtime_path(:id => asmid), :data => {:remote => true} do %>
                 <i class="icon-cog pull-left"></i>
                 <span class="title pull-left">Runtime</span>
                 <span class="hidden-xs <%= "selected" if current_page?(:controller => 'catalogs', :action => 'logs')%>"></span>
               <% end %>
            </li>
            <li class= "start">
              <a href="logs?id=<%= asmid %>", data-remote="true" ng-init="sendmessage('<%= asmid %>')">
                <i class="icon-list-ul pull-left"></i>
                <span class="title pull-left">Logs</span>
                <span class="hidden-xs <%= "selected " if current_page?(:controller => 'catalogs', :action => 'runtime') %>"></span>
              </a>
            </li>
          </ul>
          <!-- END SIDEBAR MENU -->
        </div>
      </div>
    </div>
    <div id="content">
      <%= content_for?(:onecat_contents) ? yield(:onecat_contents) : yield %>
      <%= render :partial => "cockpits/flymodal", :locals => {:cattype => cattype} %>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
