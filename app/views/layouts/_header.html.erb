<div class="navbar navbar-fixed-top">
	<div class="m-navbar-inner">
		<div class="container">
			<a  href="http://www.megam.co" > <%= image_tag "logo-megam160x43w.png", :alt => "Megam", :class => "megam_image" %></a>
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"> </span> <span class="icon-bar"> </span> <span class="icon-bar"> </span> </a>
			<div class="nav-collapse pull-right">
				<ul class="nav">
					<li>
						<%= link_to "/" do %>
						<i class="icon icon-home"></i> Home
						<% end %>
					</li>
					<li>
						<%= link_to page_path("get_started") do %>
						<i class="icon icon-gears"></i> Get started
						<% end %>
					</li>
					<li>
						<%= link_to "Features", page_path("features") %>
					</li>
					<% if signed_in? %>
					<li>
					<li>
						<%= link_to dashboard_path(1) do %>
						<i class="icon icon-dashboard"></i> My dash
						<% end %>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon icon-user"></i> <%= current_user.first_name.capitalize %> <b class="caret"></b> </a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to edit_user_path(current_user) do %>
								<i class="icon icon-user"></i> Profile
								<% end %>
							</li>
							<li class="divider"></li>

							<li>
								<%= link_to "Visit Support", "http://support.megam.co/?user=current_user.email",:target => "_blank" %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to signout_path, method: "delete" do %>
								<i class="icon  icon-eject"></i> Sign Out
								<% end %>
							</li>
						</ul>
					</li>
					<% else %>

					<li>
						<%= link_to "Sign in", signin_path, :class => "btn-header" %>
					</li>
					<li>
						<%= link_to "Sign up", signup_path, :class => "btn-header" %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
