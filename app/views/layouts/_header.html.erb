							<li class="divider"></li>
							<li>
								<%= link_to signout_path, method: "delete" do %>
								<i class="fa  fa-eject"></i> Sign Out
								<% end %>
							</li>
						</ul>
					</li>
					<% else %>

					<li>
						<%= link_to "Sign in", signin_path, :class => "btn-header" %>
