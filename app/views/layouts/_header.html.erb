<!-- BEGIN HEADER -->

<div class="header navbar navbar-fixed-top">
  <div class="container-fluid">
<!-- BEGIN TOP NAVIGATION BAR -->
    <div class="header-inner">
      <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-3 col-xs-6">
<!-- BEGIN LOGO -->
          <a class="navbar-brand" href="https://www.megam.io">
            <%= image_tag "vertice-logo.png", :alt => "logo", :class => "img-responsive" %>
          </a>
<!-- END LOGO -->
        </div>

        <div class="col-lg-4 col-md-6 col-sm-4 col-xs-6 col-lg-offset-6 col-md-offset-6 col-sm-offset-6">
          <div class="row">
<!-- <div class="col-xs-4 col-sm-1"> -->
            <ul class="nav navbar-nav pull-right">
              <li id="marketplace_top_right">
                <%= link_to marketplaces_path , :data => {:remote => true}, :class => "socket_disconnect", :onclick => "$('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
		<i class="c_icon-window-lg pull-left"></i>
		<span class="hidden-xs hidden-sm pull-left"><%= t('titles.marketplace_title') %></span>
                <% end %>
              </li>
              <li id="storage_top_right">
                <%  if Ind.backup.enable %>
                 <%= link_to buckets_path , :data => {:remote => true}, :class => "socket_disconnect", :onclick => "$('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                <!--<a data-toggle="modal" href="#obj_upload"><i class="c_icon-grid-25 pull-left"></i>-->
                <span class="hidden-xs hidden-sm pull-right"><%= t('titles.storage_title') %></span></a>
                <% end %>
                <% end %>
              </li>

              <%= render 'layouts/notifications' %>

              <li class="dropdown" id="header_notification_bar">
                <a class="dropdown-toggle" data-close-others="true" data-hover="dropdown" data-toggle="dropdown" href="#">
                  <i class="c_glob c_icon-profile"></i>
<!-- <span class="badge badge-success">6</span> -->
                </a>
                <ul class="dropdown-menu extended notification">
                    <ul class="dropdown-menu-list scroller">
                      <li>
                        <%= link_to edit_user_path(1), :data => {:remote => true}, :onclick => "$('#step-0').fadeOut(); $('#step-1').fadeOut();" do %>
                        <span class="label label-sm label-icon label-success">
                          <i class="glyphicon glyphicon-user"></i>
                        </span>
                        <%= t('header.profile') %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to signout_path, method: "delete" do %>
                        <span class="label label-sm label-icon label-danger">
                          <i class="glyphicon glyphicon-off"></i>
                        </span>
                        <%= t('header.signout') %>
                        <% end %>
                      </li>
                    </ul>
                </ul>
              </li>
            </ul>
<!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a class="navbar-toggle collapsed pull-right" data-target=".navbar-collapse" data-toggle="collapse" href="javascript:;">
              <%= image_tag "menu-toggler.png", :alt => "" %></a>
<!-- END RESPONSIVE MENU TOGGLER -->
          </div>
        </div>
        </div>
      </div>
    </div>
<!-- END TOP NAVIGATION BAR -->
  </div>


<!-- END HEADER -->

<script>
    //hide it on click
    $('.dropdown-menu ul li').click(function () {
	$('li[class="dropdown open"]').removeClass('open');
    })
</script>
