			<a  href="http://www.megam.co" > <%= image_tag "logo-megam160x43w.png", :alt => "Megam", :class => "megam_image" %></a>
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="fa fa-bars"> </span> <span class="fa fa-bars"> </span> <span class="icon-bar"> </span> </a>
			<div class="nav-collapse pull-right">
				<ul class="nav">
					<li>
						<%= link_to "/", :target => "_self" do %>
						<i class="fa fa-home"></i> Home
						<% end %>
					</li>
					<li>
						<%= link_to page_path("get_started"), :target => "_self" do %>
						<i class="fa fa-gears"></i> Get started
						<% end %>
					</li>
					<li>
						<%= link_to "Features", page_path("features"), :target => "_self" %>
					</li>
