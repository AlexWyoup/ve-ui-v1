<input type="hidden" name="provider" value="<%= selected_cloud %>">
<div class="row-fluid">
	<div class="span4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Select Cloud Provider</h4>
		</div>
		<br/>
		<div class="row-fluid">
			<div class="control-group" id="cc_name">
				<div class="controls">
					Save this Cross Cloud As : <%= text_field_tag 'name', nil, :class=> 'required', placeholder: 'Enter a name' %>
					<%= link_to "#" do %>
					<i class="icon-question-sign"></i>
					<% end %>
				</div>
			</div>
		</div>
		<br/>
		<br/>
		<div class="row-fluid">
			<div class='offset2' id='cloud_logo'>
				<a href='/auth/google_oauth2'  target='_self'><img src='/assets/signin_google.png' /></a></br><img src='/assets/logo_gce.png' height='100' width='100'/>
			</div>
		</div>
		<br/>
		<br/>
		<div class="row-fluid">
			<div class='offset2' id='acc_link'>
				<a href='https://accounts.google.com/SignUp' target='_blank'>Create an account for google.com</a>
			</div>
		</div>
	</div>
	<div class="span4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Image & Size</h4>
		</div>
		<br/>

		<div class="control-group" id="cc_pname">
			<div class="controls">
				<%= text_field_tag 'project_name', nil, :class=> 'text_field required', placeholder: 'Enter project name ..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>
		<div class="control-group" id="cc_image">
			<div class="controls">
				<%= text_field_tag 'image', nil, :class=> 'required', placeholder: 'Enter Image value...' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>
		<div class="control-group" id="cc_flavor">
			<div class="controls">
				<%= text_field_tag 'flavour', nil, :class=> 'required', placeholder: 'Enter instance size...' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= text_field_tag 'zone', nil, :class=> 'required', placeholder: 'Enter zone...' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>
	</div>

	<div class="span4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Security</h4>
		</div>
		<br/>

		<div class="control-group" id="cc_sshuser">
			<div class="controls">
				<%= text_field_tag 'ssh_user', nil, :class=> 'required', placeholder: 'Enter SSH User..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>

		<!--<div id="cc_rsapk">			
				<%= file_field_tag 'id_rsa_public_key' %>							
		</div>-->

        <div class="control-group">
			<div class="controls">
				<%= text_field_tag 'id_rsa_public_key', nil, :class=> 'required', placeholder: 'Enter id_rsa public key..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>	

		<div class="control-group" id="cc_gcli">
			<div class="controls">
				<%= text_field_tag 'google_client_id', nil, :class=> 'required', placeholder: 'Enter google client id..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>

		<div class="control-group" id="cc_gsk">
			<div class="controls">
				<%= text_field_tag 'google_secret_key', nil, :class=> 'required', placeholder: 'Enter google secret key..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>
		<br/>
	</div>
</div>
