<input type="hidden" name="provider" value="<%= selected_cloud %>">
<div class="row-fluid">
	<div class="span4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Save this Cross Cloud As</h4>
		</div>
		<br/>
		<div class="row-fluid">
			<div class="control-group" id="cc_name">
				<div class="controls">
					<i class="fa fa-cloud"></i>
					&nbsp;
					<%= text_field_tag 'name', nil, :class=> 'required', placeholder: 'Enter a name to save' %>
					<%= link_to "#" do %>
					<i class="fa fa-question-circle"></i>
					<% end %>
				</div>
			</div>
		</div>
		<div  id="acc_link">
			<div class="well">
				<span class="label label-info">Your own cloud setup</span>
				</br>
				<%= link_to "Create a new Account for AWS(EC2)", "http://aws.amazon.com/console/", :target => "_blank", :class => "btn-link"  %>
				<ul class="inline-block">
					<li>
						AWS Access Key
					</li>
					<li>
						AWS Secret Key
					</li>

				</ul>
				Make sure you have them handy
			</div>
		</div>
	</div>
	<div class="span4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Image & Size</h4>
		</div>
		<br/>

		<div class="control-group" id="cc_group">
			<div class="controls">
				<%= text_field_tag 'group', nil, :class=> 'required', placeholder: 'Enter Group name' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>
		<div class="control-group" id="cc_image">
			<div class="controls">
				<%= text_field_tag 'image', nil, :class=> 'required', placeholder: 'Enter Image id' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>
		<div class="control-group" id="cc_flavor">
			<div class="controls">
				<%= text_field_tag 'flavour', nil, :class=> 'required', placeholder: 'Enter Instance size(t1.micro etc)' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>

		<div class="control-group" id="cc_region">
			<div class="controls">
				<%= text_field_tag 'region', nil, :class=> 'required', placeholder: 'Enter AWS Region' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>
	</div>

	<div class="span4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Security</h4>
		</div>
		<br/>
		<div class="control-group" id="cc_sshkey">
			<div class="controls">
				<%= text_field_tag 'ssh_key', nil, :class=> 'required', placeholder: 'Enter AWS SSH key' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>

		<div class="control-group" id="cc_sshuser">
			<div class="controls">
				<%= text_field_tag 'ssh_user', nil, :class=> 'required', placeholder: 'Enter AWS SSH User' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>

		<!--<div class="control-group">
		<div class="controls">
		<%= file_field :private_key, :id => 'private_key',placeholder: 'Enter AWS private key' %>
		<%= link_to "#" do %>
		<i class="fa fa-question-circle"></i>
		<% end%>
		</div>
		</div>

		<div class="control-group">
		<div class="controls">
		<%= file_field :id_rsa_public_key, :id => 'id_rsa_public_key',placeholder: 'Enter AWS Public key' %>
		<%= link_to "#" do %>
		<i class="fa fa-question-circle"> </i>
		<% end%>
		</div>
		</div>-->

		<div class="control-group">
			<div class="controls">
				<%= text_field_tag 'private_key', nil, :class=> 'required', placeholder: 'Enter AWS private key...' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>

		<div class="control-group">
			<div class="controls">
				<%= text_field_tag 'id_rsa_public_key', nil, :class=> 'required', placeholder: 'Enter AWS public key..' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>

		<div class="control-group" id="cc_awsak">
			<div class="controls">
				<%= text_field_tag 'aws_access_key', nil, :class=> 'required', placeholder: 'Enter AWS Access key' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>

		<div class="control-group" id="cc_awssk">
			<div class="controls">
				<%= text_field_tag 'aws_secret_key', nil, :class=> 'required', placeholder: 'Enter AWS Secret key' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>

		<br/>
	</div>
</div>
