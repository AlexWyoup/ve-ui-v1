<input type="hidden" name="provider" value="<%= selected_cloud %>">
<div class="row">
	<div class="col-md-4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Save My Cloud As</h4>
		</div>
		<br/>
		<div class="row">
			<div class="control-group" id="cc_name">
				<div class="controls">
					&nbsp;&nbsp;&nbsp;&nbsp;<i class="icon-cloud"></i>
					&nbsp;
					<%= text_field_tag 'name', nil, placeholder: 'Enter a name' %>
					<%= link_to "#" do %>
					<i class="icon-question-sign" id="popover_hp_name"></i>
					<% end %>
				</div>
			</div>
		</div>
		<br/>
		<div  id="acc_link">
			<div class="panel panel-primary">
				<div class="panel-heading">
					Sign Up for hpcloud
				</div>
				<div class="panel-body">
					Click here : <%= link_to "Sign Up", "http://console.hpcloud.com", :target => "_blank", :class => "btn-link" %>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Image & Size</h4>
		</div>
		<br/>

		<div class="control-group" id="cc_group">
			<div class="controls">
				<%= text_field_tag 'group', nil, placeholder: 'Enter Group name' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_group"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="control-group" id="cc_image">
			<div class="controls">
				<%= text_field_tag 'image', nil, placeholder: 'Enter Image value...' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_image"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="control-group" id="cc_flavor">
			<div class="controls">
				<%= text_field_tag 'flavor', nil, placeholder: 'Enter instance size...' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="control-group" id="cc_tenantid">
			<div class="controls">
				<%= text_field_tag 'tenant_id', nil, placeholder: 'Enter Tenant Id' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_tenantid"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="control-group" id="cc_zone">
			<div class="controls">
				<%= text_field_tag 'zone', nil, placeholder: 'Enter HP zone' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_zone"></i>
				<% end %>
			</div>
		</div>

	</div>

	<div class="col-md-4">
		<br/>
		<br/>
		<div class="div_border">
			<h4 class="alert-heading">Security</h4>
		</div>
		<br/>
		<div class="control-group" id="cc_sshkey">
			<div class="controls">
				<%= text_field_tag 'ssh_key', nil, placeholder: 'Enter SSH key...' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_sshkey"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="control-group" id="cc_sshuser">
			<div class="controls">
				<%= text_field_tag 'ssh_user', nil, placeholder: 'Enter SSH User..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_sshuser"></i>
				<% end %>
			</div>
		</div>		
		<br/>
		<!--<div class="control-group">
		<div class="controls">
		<label for="file">Public Key</label> <%= file_field_tag 'id_rsa_public_key', accept: 'text' %>
		<%= link_to "#" do %>
		<i class="icon-question-sign" id="popover_hp_publickey"></i>
		<% end %>
		</div>
		</div>-->
		<div class="control-group">
			<div class="controls">
				<%= select_tag :id_rsa_public_key, options_for_select(ssh_keys.map{ |c| c[:name] }) %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_aws_publickey"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="control-group" id="cc_awsak">
			<div class="controls">
				<%= text_field_tag 'hp_access_key', nil, placeholder: 'Enter HP access key..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_accesskey"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div class="control-group" id="cc_awssk">
			<div class="controls">
				<%= text_field_tag 'hp_secret_key', nil, placeholder: 'Enter HP secret key..' %>
				<%= link_to "#" do %>
				<i class="icon-question-sign" id="popover_hp_secretkey"></i>
				<% end %>
			</div>
		</div>

		<br/>
	</div>
</div>
