<%= javascript_include_tag "megam.popovers.js" %>
<input type="hidden" name="provider" value="<%= selected_cloud %>">
<div class="row">
	<div class="col-md-4">
		<br/>
		<br/>
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Save My Cloud As</h4>
		</div>
		<br/>
		<div class="row">
			<div class="form-group" id="cc_name">
				<label class="col-sm-2 col-md-2 col-lg-1 control-label"> &nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-cloud"></i> &nbsp; </label>
				<div class="col-sm-8 col-md-8 col-lg-9">
					<%= text_field_tag 'name', nil, placeholder: 'Enter a name to save', :required => true,
					:class =>"form-control input-sm" %>
				</div>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle" id="popover_cloud_name"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div  id="acc_link">
			<div class="panel panel-primary">
				<div class="panel-heading">
					Sign Up for hpcloud
				</div>
				<div class="panel-body">
					Click here : <%= link_to "Sign Up", "http://console.hpcloud.com", :target => "_blank", :class => "btn-link" %>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<br/>
		<br/>
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Image & Size</h4>
		</div>
		<br/>

		<div class="form-group" id="cc_group">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'group', nil, placeholder: 'Enter Group name', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_group" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_image">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'image', nil, placeholder: 'Enter Image value', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_image" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_flavor">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'flavor', nil, placeholder: 'Enter instance size', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_flavor" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_tenantid">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'tenant_id', nil, placeholder: 'Enter Tenant id', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_tenantid" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_zone">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'zone', nil, placeholder: 'Enter HP zone', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_zone" ></i>
			<% end %>
		</div>

	</div>

	<div class="col-md-4">
		<br/>
		<br/>
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Security</h4>
		</div>
		<br/>
		<div class="form-group" id="cc_sshkey">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'ssh_key', nil, placeholder: 'Enter SSH key', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_sshkey" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_sshuser">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'ssh_user', nil, placeholder: 'Enter SSH user', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_sshuser" ></i>
			<% end %>
		</div>
		<br/>
		<!--<div class="control-group">
		<div class="controls">
		<label for="file">Public Key</label> <%= file_field_tag 'id_rsa_public_key', accept: 'text' %>
		<%= link_to "#" do %>
		<i class="fa-question-sign" id="popover_hp_publickey"></i>
		<% end %>
		</div>
		</div>-->
		<div class="form-group">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= select_tag :id_rsa_public_key, options_for_select(ssh_keys.map{ |c| c[:name] }) %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_aws_publickey"></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_awsak">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'hp_access_key', nil, placeholder: 'Enter HP access key', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_accesskey" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_awssk">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'hp_secret_key', nil, placeholder: 'Enter HP secret key', :required => true,
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_hp_secretkey" ></i>
			<% end %>
		</div>

		<br/>
	</div>
</div>
