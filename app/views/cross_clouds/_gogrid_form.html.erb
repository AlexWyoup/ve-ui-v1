<input type="hidden" name="provider" value="<%= selected_cloud %>">
<div class="row">
	<div class="col-md-4">
		<br/>
		<br/>
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Save My Cloud As</h4>
		</div>
		<br/>
		<div class="row">
			<div class="form-group" id="cc_name">
				<label class="col-sm-2 col-md-2 col-lg-1 control-label"> &nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-cloud"></i> &nbsp; </label>
				<div class="col-sm-8 col-md-8 col-lg-9">
					<%= text_field_tag 'name', nil, placeholder: 'Enter a name to save', :id =>"required",
					:class =>"form-control input-sm" %>
				</div>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle" id="popover_gogrid_name"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<div  id="acc_link">
			<div class="panel panel-primary">
				<div class="panel-heading">
					Sign Up for GoGrid
				</div>
				<div class="panel-body">
					Click here : <%= link_to "Sign Up", "https://securesignup.gogrid.com/", :target => "_blank", :class => "btn-link" %>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<br/>
		<br/>
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Image & Size</h4>
		</div>
		<br/>
		<div class="form-group" id="cc_tenantid">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'datacenter', nil, placeholder: 'Datacenter name', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_gogrid_datacenter" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_image">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'image', nil, placeholder: 'Enter image value', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_gogrid_image" ></i>
			<% end %>
		</div>		
		<br/>		
		<div class="form-group" id="cc_flavor">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'flavor', nil, placeholder: "Storage size", :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_gogrid_flavor" ></i>
			<% end %>
		</div>
		<br/>		
	</div>

	<div class="col-md-4">
		<br/>
		<br/>
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Security</h4>
		</div>
		<br/>
		<div class="form-group" id="cc_sshuser">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'ssh_user', nil, placeholder: 'SSH user', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_pb_sshuser" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= select_tag :id_rsa_public_key, options_for_select(ssh_keys.map{ |c| c[:name] }) %>

			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_aws_publickey"></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_awsak">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'api_key', nil, placeholder: 'API Key', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_gogrid_api_key" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_awssk">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'shared_secret', nil, placeholder: 'Shared Secret', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_gogrid_shared_secret" ></i>
			<% end %>
		</div>

		<br/>
	</div>
</div>
