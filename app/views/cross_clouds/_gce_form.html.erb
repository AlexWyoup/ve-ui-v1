<input type="hidden" name="provider" value="<%= selected_cloud %>">
<div class="row">
	<div class="col-md-4">
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Save My Cloud As</h4>
		</div>
		<br/>
		<div class="row">
			<div class="form-group" id="cc_name">
				<label class="col-sm-2 col-md-2 col-lg-1 control-label"> &nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-cloud"></i> &nbsp; </label>
				<div class="col-sm-8 col-md-8 col-lg-9">
					<%= text_field_tag 'name', nil, placeholder: 'Enter a name to save', :id =>"required",
					:class =>"form-control input-sm" %>
				</div>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle" id="popover_google_name"></i>
				<% end %>
			</div>
		</div>
		<br/>
		<br/>
		<div id='acc_link'>
			<div class="panel panel-primary">
				<div class="panel-heading">
					Sign Up for Google Cloud
				</div>
				<div class="panel-body">
					Sign Up <a href='https://accounts.google.com/SignUp' target='_blank' class="btn-link" >New Google Account</a>
				</div>
			</div>
		</div>
		<br/>
		<br/>
		<div id='cloud_logo'>
			<a href='/auth/google_oauth2'  target='_self' class ="btn btn-lg btn-primary btn-block" >
			<icon class="fa fa-google-plus" />
			&nbsp;Connect Your Google Account</a>
		</div>
	</div>
	<div class="col-md-4">
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Image & Size</h4>
		</div>
		<br/>

		<div class="form-group" id="cc_pname">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'project_name', nil, placeholder: 'Enter Project name', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_google_projectname" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_image">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'image', nil, placeholder: 'Enter Image value', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_google_image" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_flavor">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'flavor', nil, placeholder: 'Enter instance size', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_google_flavor" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'zone', nil, placeholder: 'Enter zone', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_google_zone" ></i>
			<% end %>
		</div>
	</div>

	<div class="col-md-4">
		<div class="underlineolivegreen">
			<h4 class="alert-heading">Security</h4>
		</div>
		<br/>

		<div class="form-group" id="cc_sshuser">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'ssh_user', nil, placeholder: 'Enter SSH user', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_google_sshuser" ></i>
			<% end %>
		</div>
		<br/>
		<!--<div class="control-group">
		<div class="controls">
		<%= text_field_tag 'id_rsa_public_key', nil, placeholder: 'Enter id_rsa public key..' %>
		<%= link_to "#" do %>
		<i class="fa-question-sign" id="popover_google_publickey"></i>
		<% end %>
		</div>
		</div>-->
		<div class="form-group">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= select_tag :id_rsa_public_key, options_for_select(ssh_keys.map{ |c| c[:name] }) %>

			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_aws_publickey"></i>
			<% end %>

		</div>
		<br/>
		<div class="form-group" id="cc_gcli">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'google_client_id', nil, placeholder: 'Enter google client id', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_google_clientid" ></i>
			<% end %>
		</div>
		<br/>
		<div class="form-group" id="cc_gsk">
			<div class="col-sm-11 col-md-11 col-lg-11">
				<%= text_field_tag 'google_secret_key', nil, placeholder: 'Enter google secret key', :id =>"required",
				:class =>"form-control input-sm" %>
			</div>
			<%= link_to "#" do %>
			<i class="fa fa-question-circle" id="popover_google_secretkey" ></i>
			<% end %>
		</div>
		<br/>
	</div>
</div>
