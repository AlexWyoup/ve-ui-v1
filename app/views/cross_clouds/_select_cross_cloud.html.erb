<div class="row">
  	<div class="col-xs-6 col-sm-7 col-md-9 col-lg-9 col-xl-9">
  		<h4>Choose Your Cloud</h4>
  	</div>
  	<div class="col-xs-6 col-sm-5 col-md-3 col-lg-3 col-xl-3 c_back">
  		<div class="pull-right"><i class="settings_lt_arrow glyphicon glyphicon-arrow-left"></i><a href="/settings" onclick="$('#settings_tab a[href="#tab_sshkey"]').tab('show')">Back</a></div>
	</div>
	
</div>
<div class="row">
	<!-- <div class="col-md-12 col-xs-12"> -->
		<div class="carousel c_carousel default">

		    <div class="prev" >
		    	<span class="icon-chevron-left"></span>
		    </div>
		    <div class="jCarouselLite c_jCarouselLite">
		        <ul>
		            <li><%= link_to image_tag("amazon.png", :width => "123", :height => "120"), cloud_selector_path(:cloud => "aws"), :remote => true %></li>
		            <li><%= link_to image_tag("hp.png", :width => "123", :height => "120"), cloud_selector_path(:cloud => "hp"), :remote => true %></li>
		            <li><%= link_to image_tag("gce.png", :width => "123", :height => "120"), cloud_selector_path(:cloud => "gce"), :remote => true %></li>
		            <li><%= link_to image_tag("profitbricks.png", :width => "123", :height => "120"), cloud_selector_path(:cloud => "profitbricks"), :remote => true %></li>
		            <li><%= link_to image_tag("opennebula.png", :width => "123", :height => "120"), cloud_selector_path(:cloud => "opennebula"), :remote => true %></li>
		            <li><%= link_to image_tag("gogrid.png", :width => "123", :height => "120"), cloud_selector_path(:cloud => "gogrid"), :remote => true %></li>

		        </ul>
		    </div>
		    <div class="next">
		    	<span class="icon-chevron-right"></span>
		    </div>
		    <!-- <button class="next">>></button> -->
		    <div class="clear"></div>
		</div>
		
	<!-- </div> -->
</div>

					<%= form_tag cross_clouds_path, multipart: true, :id => "megamform", :novalidate => 'novalidate', :method => 'post', :remote => true, data: { spinlock: '#spin_cross_cloud'}  do %>

					<div id="provider_form">
						<%= render :partial => "cross_clouds/aws_form", :locals => {:selected_cloud => "aws", :ssh_keys => @ssh_keys}%>
					</div>
					<input type="hidden" name="access_token" value="<%= @token %>">
					<input type="hidden" name="refresh_token" value="<%= @refresh_token %>">
					<input type="hidden" name="expire" value="<%= @expire %>">
					<br/>
					<br/>
					<br/>
					<div class="row">
						<div class="col-md-4"></div>
						<div class="col-md-4">
							<%= submit_tag "Create", :style => "width:150px; height:50px;", :class => "btn green settings_create" %>
						</div>
					</div>
					<% end %>



<div id="crosscloud_postfinish_popup" class="modal fade" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog" style="max-width:400px">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
				<h4 class="modal-title">New cloud</h4>
			</div>
			<div class="modal-body">
				<div class="alert alert-success">
					<p>
						<div id="cloud_res_msg"></div>
						</br>
					</p>
				</div>
			</div>
			<div class="modal-footer">
				<%= link_to  "Ok", settings_path, :class => "btn btn-pink", :target => "_self" %>
			</div>
		</div>
	</div>
</div>

<div id="crosscloud_postfinish_popup_error" class="modal fade" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog" style="max-width:400px">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
				<h4 class="modal-title">New cloud</h4>
			</div>
			<div class="modal-body">
				<div class="alert alert-success">
					<p>
						<div id="cloud_err_msg"></div>
						</br>
					</p>
				</div>
			</div>
			<div class="modal-footer">
				<%= link_to  "Ok", settings_path, :class => "btn btn-pink", :target => "_self" %>
			</div>
		</div>
	</div>
</div>


<script type="text/javascript">
    $(".default .jCarouselLite").jCarouselLite({
        btnNext: ".default .next",
        btnPrev: ".default .prev",
        start: 1,
        scroll: 1,

    });

</script>
