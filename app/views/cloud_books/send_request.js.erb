var ran_entity = '#cloudbook_buildrequest_postshow_popup';

$(ran_entity).toggle();
$(ran_entity).fadeIn("slow");	

<% if @defn_out %>
var selected_entity = '#cloudbook_buildrequest_postshow_popup';
$("#cloudbook_buildrequest_postform").html('<%= escape_javascript(render :partial => "cloud_books/input_cloudbook_request" , :locals => {:defn_result => @defn_result, :method => 'post'})%>');
$(selected_entity).modal('show');
<% else %>
var selected_entity = '#cloudbook_buildrequest_postshow_popup_error';
$(selected_entity).modal('show');
<% end %>