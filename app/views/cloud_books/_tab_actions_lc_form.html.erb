<%= form_tag(build_request_path, :method => "post", :name => "lifecycle", :remote => true) do %>
<div class="widget-box">
	<div class="widget-title">
		<span class="icon"> <i class="fa fa-th-list"></i> </span>
		<h5>Life Cycle Requests</h5>
	</div>
	<div class="widget-content">
		<input type="hidden"  name="appdefns_id" value="<%= @appdefns_id %>">
		<input type="hidden"  name="req_type" value="<%= @req_type %>">
		<input type="hidden"  name="book_type" value="<%= @book_type %>">
		<input type="hidden"  name="node_name" value="<%= @node_name %>">
		<div class="control-group">
			<div class="controls">
				<input type="text" name="lc_apply" value="<%= @lc_apply %>">
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= text_field_tag 'lc_additional', nil, :id => "lc_additional", :class=> 'required', placeholder: 'Enter Life-Cycle Additional value' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= text_field_tag 'lc_when', nil, :id => "lc_when", :class=> 'required', placeholder: 'Enter Life-Cycle When value' %>
				<%= link_to "#" do %>
				<i class="fa fa-question-circle"></i>
				<% end %>
			</div>
		</div>
		<%= submit_tag @req_type, :class => "btn btn-large btn-success btn-block", :remote => true, data: { spinner: '#send_request_spinner'} %>
	</div>
</div>
<% end %>
<%= spinner_tag 'send_request_spinner' %>