<% if @full_detail %>
var selected_entity = '#cb_action';
var to_insert_content = "<%= escape_javascript(render :partial => 'cloud_books/book_details', :locals => {:cloud_book => @cloud_book, :requests => @requests }) %>";
insertAt(selected_entity, to_insert_content);

<% else %>
var selected_entity = '#cloudbook_show_popup';
$("#book_show").html('<%= escape_javascript(render :partial => "cloud_books/show_book" , :locals => {:cloud_book => @cloud_book, :method => 'post'})%>');
$(selected_entity).modal('show');
<% end %>
