<div id="blog_wrapper">
	<%= form_tag(federate_path, :method => "post") do %>
	<% @products.each do |product| %>
	<% @apps_item.each do |apps_item_el| %>
	<% if apps_item_el.product_id === product.id && (product.identity.match(identity_type)) %>
	<div class="span6">
		<div class="post">
			<div class="row-fluid">
				<div class="span3">
					<%= image_tag product.image_url, :alt => product.name,:class => "main_pic", :alt => "salesforce"%>
				</div>
				<div class="span3 info">
					<a href="blog-post.html"> <h3>Measure theme blog post</h3> </a>
					<p>
						<!-- Slide THREE -->

						There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable.
					</p>
					<div class="post_info">

						<div class="slideThree">

							<input type="checkbox" value="<%= product.name %>_<%= identity_type %>" id="<%= product.name %>_<%= identity_type %>" name="product_<%= product.id %>" />
							<label for="<%= product.name %>_<%= identity_type %>"></label>

						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
	<% end %>
	<% end %>

	<input type="hidden" name="identity_type" value="<%= identity_type %>">
	<p>
		<strong>Select an Account name, under which you want to federate the following cloud applications </strong>
	</p>

	<% identities_array = current_user.cloud_identities.all.map { |ci| [ci.account_name, ci.id] } %>
	<%= select_tag(:ci, options_for_select(identities_array)) %>

	<%= submit_tag("Federate", :class => "btn btn-success") %>

	<% end %>
</div>

