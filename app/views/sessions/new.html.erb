<% provide(:title, "Sign in") %>

<%= render :partial => "customizations/flash_messages" %>
<div id="box_login">
	<div class="container">
		<div class="span12 box_wrapper">
			<div class="offset2 span12 box">
				<div>
					<div class="head">
						<h4>Log in to your account</h4>
					</div>
					<div class="social">
						<a href="/auth/facebook" class="face_login"> <span class="face_icon"> <%= image_tag "i_face.png", :alt => "fb" %> </span> <span class="text">Sign in with Facebook</span> </a>
						<div class="division">
							<hr class="left">
							<span>or</span>
							<hr class="right">
						</div>
					</div>
				<div class="form">
						<%= form_for(:session, :url => sessions_path, :html => {:id =>'password_validate', :novalidate => 'novalidate'}) do |f| %>
						<div class="control-group">
							<div class="controls">
								<%= f.text_field :email, :class => 'text_field required',placeholder: "Email" %>

							</div>
						</div>

						<div class="control-group">
							<div class="controls">
								<%= f.password_field :password, :id => 'password', :class => 'text_field required',placeholder: "Password" %>
							</div>
						</div>
						<div class="remember">
							<div class="left">
  <%= check_box_tag :remember_me, 1, params[:remember_me], :id => "remember_me" %>
  <%= label_tag :remember_me %>
							</div>
							<div class="right">
								<%= link_to "Forgotpassword?", new_password_reset_path %>
							</div>
						</div>

						<%= f.submit "Sign in", :class => "btn" %>
						<% end %>
					</div>
				</div>
			</div>
			<p class="already">
				Don't have an account? <%= link_to "Sign up", signup_path %>
			</p>
		</div>
	</div>
</div>

