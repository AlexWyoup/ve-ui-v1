<input type="hidden" value="cpu_system" ng-model="xaxis_label">
<div class="row">
	<div class="col-md-12">
		<div class="alert alert-info">
			Welcome in the <strong>Unicorn Admin Theme</strong>. Don't forget to check all the pages! <a href="#" data-dismiss="alert" class="close">Ã—</a>
		</div>
		<div class="widget-box">
			<div class="widget-title">
				<span class="icon"><i class="fa fa-signal"></i></span>
				<h5>Site Statistics</h5>
				<div class="buttons">
					<!--<select>
						<option ng-repeat="b in a_books"><a href="/dashboards/{{dashboard_id}}/{{b.value}}" ng-click="sm_view()">{{b.value}}</a></option>
					</select>-->
					<a href="#" class="btn" ng-click="update_widget_metrics("cpu", widget)"><i class="fa fa-refresh"></i> <span class="text">Update cpu load</span></a>
					<a href="#" class="btn" ng-click="update_widget_metrics("http requests", widget)"><i class="fa fa-refresh"></i> <span class="text">Update http requests</span></a>
				</div>
			</div>
			<div class="widget-content">
				<div class="row">
					<div class="col-xs-12 col-sm-4">
						<ul class="site-stats">
							<li>
								<div class="cc">
									<i class="fa fa-user"></i><strong>{{uptime_data}}</strong><small>Total Uptime(days)</small>
								</div>
							</li>
							<li>
								<div class="cc">
									<i class="fa fa-arrow-right"></i><strong>{{rpm_data}}</strong><small>Requests Served(rpm)</small>
								</div>
							</li>
							<li class="divider"></li>
							<li>
								<div class="cc">
									<i class="fa fa-shopping-cart"></i><strong>{{new_books}}</strong><small>New Books (last week)</small>
								</div>
							</li>
							<li>
								<div class="cc">
									<i class="fa fa-tag"></i><strong>{{total_books}}</strong><small>Total Books</small>
								</div>
							</li>
							<li>
								<div class="cc">
									<i class="fa fa-repeat"></i><strong>{{total_queues}}</strong><small>Total Queue Messages</small>
								</div>
							</li>
						</ul>
					</div>
					<div class="col-xs-12 col-sm-8">
						<div id="graph_placeholder"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

