<div class="row">
    <div data-toggle="buttons">
        <div class="btn-storage-container bigger">
            {{customapp-repo-chooser name='Your Github Repo' repoable=selectedRepo style="float: left, margin-top: 10px"}}
            {{customapp-repo-chooser name='Public Repo' repoable=selectedRepo style="float: right"}}
        </div>
    </div>
</div>
{{#if gitHub}}
    {{customapp-repo-github}}
{{else if publicRepo}}
    <div class="row pad_t25">
        <div class="col-md-12">
            {{text-field type="text" value=publicRepo placeholderKey="customapp.publicrepo.title" class ="form-control" id="new-public-repo" disabled=repoValidated name="publicrepo" autofocus="autofocus"}}
        </div>
    </div>
{{/if}}
