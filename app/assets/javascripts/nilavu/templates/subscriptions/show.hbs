<div class="container">
    <div class="row">
        <div class="rt-box col-xs-12 col-sm-12 col-md-12 c_bg_white c_height_5">
            <div class="">
                <div class='contents'>
                    <div class="row">
                        <div class="margin_30 ">
                            <div class="row c_pading-b15">
                                <h1 class="center billing-title">Welcome to our cloud platform.</h1>
                                <h4 class="center">
                                    Before you get started, we need some additional information to setup your account
                                </h4>
                                <div class="bottom-divider"></div>
                                <div class="row pad_t25">
                                    <div class="center-btn">
                                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2 cat_title">
                                            Enter OTP Pin:
                                        </div>
                                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                                            {{text-field type="text" value=otpPin placeholderKey="user.activation.otp_title" class ="form-control" id="new-otp-pin" disabled=otpValidated name="otppin" autofocus="autofocus"}}
                                        </div>
                                        <div class="col-md-1">
                                            <button class="btn btn-success btn-plain" id="otp-verify" {{action "verifyOTP"}}>
                                                <a>
                                                    {{i18n 'user.activation.otpverify'}}
                                                </a>
                                            </button>
                                        </div>
                                        <div class="col-md-offset-1 col-md-6">
                                            We just sent a verification text to
                                            +61-100-100-100{{phoneNumber}}
                                         <a href="#" id="resend_otp" {{action "resendOTP"}}>
                                            {{i18n 'user.activation.resend'}}
                                            <span class="pull-right">
                                                {{conditional-loading-spinner condition=formSubmitted size="large"}}
                                            </span>
                                        </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row c_pading-b15">
                        <div class="col-md-12  c_pading-b15">
                            <div class="center-btn">
                                <div class="col-md-12">
                                    <div class="row">
                                        <h4>Address:</h4>
                                        {{text-field type="text" value=address placeholderKey="user.activation.address" class ="form-control" id="activatioin-address" disabled=addresssValidated name="address" autofocus="autofocus"}}
                                        <h4>Address 2:</h4>
                                        {{text-field type="text" value=address2 placeholderKey="user.activation.address2" class ="form-control" id="activation-address2" disabled=addresssValidated name="address2" autofocus="autofocus"}}
                                        <h4>City:</h4>
                                        {{text-field type="text" value=city placeholderKey="user.activation.city" class ="form-control" id="activation-city" disabled=addresssValidated name="city" autofocus="autofocus"}}
                                        <h4>State:</h4>
                                        {{text-field type="text" value=state placeholderKey="user.activation.state" class ="form-control" id="activation-state" disabled=addresssValidated name="state" autofocus="autofocus"}}
                                        <h4>Zip code:</h4>
                                        {{text-field type="text" value=zipcode placeholderKey="user.activation.zipcode" class ="form-control" id="activation-zipcode" disabled=addresssValidated name="zipcode" autofocus="autofocus"}}
                                        <h4>Company (optional):</h4>
                                        {{text-field type="text" value=company placeholderKey="user.activation.company" class ="form-control" id="activation-company" disabled=addresssValidated name="company" autofocus="autofocus"}}
                                        <h4>Select country:</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="margin_30 ">
                                <div class="row ">
                                    <div class="col-md-12">
                                        <div class="center-btn">
                                            <button class="btn btn-primary btn-payment" id="whmcs-payment-link" {{bind-attr disabled="submitDisabled"}} {{action "addFunds"}}>
                                                {{i18n 'billing.proceed'}}
                                                <span class="pull-right">
                                                    {{conditional-loading-spinner condition=formSubmitted size="large"}}
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
