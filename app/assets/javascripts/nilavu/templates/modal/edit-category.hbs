<div id="component-create">
    {{edit-category-title launchable=launchOption}}
    <div class="hideme steps">
        <section>
            <div class="tabbable-custom nav-justified">
                <ul class="nav nav-tabs nav-justified">
                    {{edit-category-tab panels=panels selectedTab=selectedTab tab="general"}}
                    {{#if isVirtualMachine}}
                        {{edit-category-tab panels=panels selectedTab=selectedTab tab="virtualmachine"}}
                    {{else}}
                        {{edit-category-tab panels=panels selectedTab=selectedTab tab="application"}}
                    {{/if}}
                    {{edit-category-tab panels=panels selectedTab=selectedTab tab="summary"}}
                </ul>

                <div class="modal-body">
                    {{#each panels as |tab|}}
                        {{component tab selectedTab=selectedTab category=model.metaData}}
                    {{/each}}
                </div>
            </div>
        </section>
        <div class="footer hideme3 no-padding">
            {{launching-cost saveLabel=saveLabel category=model.metaData}}
            <div class="col-sm-3 no-padding">
              {{#d-button id="save-category" class="btn btn-block btn-primary" disabled=disabled action="nextCategory" label=saveLabel}}
                <span class="pull-right">
                  {{conditional-loading-spinner size="large" condition=loading}}
                </span>
              {{/d-button}}  
            </div>
        </div>
    </div>
</div>
